extends base

block title
  title Nuevo Proyecto

block content
  .contenido-principal
    h1= mainTitle

    if notErrors
      .alerta.correcto= notErrors

    if errors
      each error in errors
        .alerta.error= error.message
  
    form.agregar-proyecto(action="/new-project" method="POST")
      .campo 
        label(for="name") Nombre Proyecto:
        input(type="text" id="name" name="name" placeholder="Nombre del Proyecto")
      .campo.enviar
        input(type="submit" value="Agregar" class="boton")